{% extends "GlobalBundle:Client/Layout:layout.html.twig" %}

{% block metaTitle %}Connexion{% endblock %}

{% block content %}

    <h1>Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="username">Email</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"><br>

        <label for="password">Mot de passe</label>
        <input type="password" id="password" name="_password"><br>

        <input type="hidden" name="_target_path" value="admin_page_index">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <button type="submit">Se connecter</button>
    </form>

    <p>Vous n'avez pas de compte ? <a href="{{ path('register') }}">Inscrivez vous</a></p>

{% endblock %}